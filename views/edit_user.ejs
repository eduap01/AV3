<% include partials/_header %>

<div class="container">
  <div class="row">
    <!-- FORM -->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/users/edit/<%= user._id %>" method="post">
            <div class="form-group">
              <input
                class="form-control"
                type="text"
                name="name"
                placeholder="Nombre"
                value="<%= user.name %>"
                required>
            </div>
            <div class="form-group">
              <input
                class="form-control"
                type="text"
                name="surname"
                placeholder="Apellidos"
                value="<%= user.surname %>"
                required>
            </div>
            <div class="form-group">
              <input
                class="form-control"
                type="password"
                name="password"
                placeholder="ContraseÃ±a"
                value="<%= user.password %>"
                required>
            </div>
            <div class="form-group">
              <input
                class="form-control"
                type="text"
                name="email"
                placeholder="E-mail"
                value="<%= user.email %>"
                required>
            </div>
            <div class="form-group">
              <input
                class="form-control"
                type="text"
                name="rol"
                placeholder="Rol"
                value="<%= user.rol %>"
                required>
            </div>
            <button class="btn btn-primary" type="submit">
              Actualizar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% include partials/_footer %>
