<% include partials/_header %>
<div class="container">
  <div class="row">
    <!-- FORM -->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/users/add" method="post">
              <div class="form-group">
                  <input class="form-control" type="text" name="email" placeholder="Email" required>
              </div>
              <div class="form-group">
                  <input class="form-control" type="text" name="password" placeholder="Contraseña" required>
              </div>
              <div class="form-group">
                  <input class="form-control" type="text" name="rol" placeholder="Rol" required>
              </div>
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="Nombre" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="surname" placeholder="Apellidos" required>
            </div>
            <button class="btn btn-primary" type="submit">Agregar</button>
          </form>
        </div>
      </div>
    </div>

<!-- LISTA -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>N°</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Rol</th>
            <th>Email</th>
            <th>Asignaturas</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < users.length; i++) { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><strong><%= users[i].name %></strong></td>
              <td><%= users[i].surname %></td>
              <td><%= users[i].rol %></td>
              <td><%= users[i].email %></td>
              <td>
                <a href="/users/delete/<%= users[i]._id %>" class="btn btn-danger">Eliminar</a>
                <a href="/users/edit/<%= users[i]._id %>" class="btn btn-info">Editar</a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<% include partials/_footer %>